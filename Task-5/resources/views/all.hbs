{{>header}}
{{>nav}}
<section class="container my-5">
    <div class="d-flex justify-content-between mb-4">
        <a href="/add" class="btn btn-primary">Add Task</a>
        {{!-- <a href="/Search" class="btn btn-primary">Search Task</a> --}}
        <a href="/deleteAll" class="btn btn-danger">Delete All</a>
    </div>
    {{!-- <input type="text" placeholder="Search ...." id="myInput" class="form-control" /> --}}

    <br>
    <form action="/Search" method="get">
        <input class="form-control me-2 justify-content-end" id="myInput" type="search" placeholder="Search"
            name="search">
        <button class="btn btn-outline-success text-light bg-primary" type="submit">Search</button>
    </form>

    <br><br>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Status</th>
                <th>due date</th>
            </tr>
        </thead>
        <tbody>
            {{#if hasData}}

            {{#each allTasks}}
            <tr>
                <td>{{_id}}</td>
                <td>{{title}}</td>
                <td>{{content}}</td>
                <td>{{status}}</td>
                <td>{{dueDate}}</td>
                <td>
                    <a href="/show/{{_id}}" class="btn btn-primary mx-3">Show</a>
                    <a href="/edit/{{_id}}" class="btn btn-warning mx-3">Edit</a>
                    <a href="/delete/{{_id}}" class="btn btn-danger mx-3">Delete</a>

                    {{#unless status }}
                    <a href="/activate/{{_id}}" class="btn btn-danger mx-3">Activate</a>
                    {{/unless}}
                </td>
            </tr>
            {{/each}}
            {{else}}
            <tr>
                <td colspan="5">No Data Yet</td>
            </tr>
            {{/if}}
        </tbody>
    </table>
</section>



{{>footer}}