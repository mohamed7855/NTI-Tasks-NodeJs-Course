{{>header}}
{{>nav}}
<section class="container my-5">
    <div class="d-flex justify-content-between mb-4">
        <a href="/add" class="btn btn-primary">Add Task</a>
        <a href="/deleteAll" class="btn btn-danger">Delete All</a>
    </div>

<table class="table table-bordered">
    <thead>
        <tr>
        <th>id</th>
        <th>Title</th>
        <th>Content</th>
        <th>Status</th>
        <th>due date</th>
        </tr>
    </thead>
    <tbody>
        {{#if hasData}}

        {{#each allTasks}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{content}}</td>
            <td>{{status}}</td>
            <td>{{dueDate}}</td>
            <td>
                <a href="/single/{{id}}" class="btn btn-primary mx-3">Show</a>
                <a href="/edit/{{id}}" class="btn btn-warning mx-3">Edit</a>
                <a href="/delete/{{id}}" class="btn btn-danger mx-3">Delete</a>
                <a href="#" class="btn btn-danger mx-3">ChangeStatus</a>        
            </td>
        </tr>
        {{/each}}
        {{else}}
            <tr>
                <td colspan="5">No Data Yet</td>
            </tr>
        {{/if}}
    </tbody>
</table>
</section>
{{>footer}}